<!DOCTYPE html>
<html ng-app="app">
<head style="width: 100% !important;">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=9,chrome=1">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="@Url.Content("~/content/favicon.ico")" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/jquery.bxslider.css" rel="stylesheet">
    <link href="~/Content/custom-autocomplete.css" rel="stylesheet">
    <title>Serca - @ViewBag.Title</title>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="~/Scripts/angular-ui-router.min.js"></script>
    <script src="~/Scripts/signature_pad/signature_pad.min.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/signature_pad/1.5.3/signature_pad.min.js"></script>*@
    <script>
        var app;
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @*@Styles.Render("~/Content/jquery-ui")*@
    @Scripts.Render("~/bundles/jqwidgets")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Map/css")
    @Scripts.Render("~/bundles/modernizr")
    @*@Scripts.Render("~/bundles/mensajes")*@
    <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.2/summernote.css" rel="stylesheet">
    <!--[if lt IE 9]>
     <script src="~/Scripts/html5shiv.js" type="text/javascript"></script>
     <script src="~/Scripts/respond.min.js" type="text/javascript"></script>
    <![endif]-->
</head>
@*padding: 0; margin: 0; box-sizing: border-box; overflow-x: hidden;*@
<body> @*style="width: 98% !important;">*@
    @*Cargo diferentes js dependiendo del controlador*@
    @{
        string controladorActual = @ViewContext.RouteData.Values["Controller"].ToString().ToLower();
    }

    @if (controladorActual == "login")
    {
        @Html.Partial("_HeaderLogin")
        @RenderBody()
        @*@Scripts.Render("~/bundles/login");*@
        @*@Styles.Render("~/Content/login");*@
    }
    else if (controladorActual == "afiliacionespopup")
    {
        @RenderBody();
    }
    else
    {
        @Html.Partial("_Header")
        @RenderBody()
    }


    @switch (controladorActual)
    {
        case "medicos":
            @Scripts.Render("~/bundles/mensajes");
        @Scripts.Render("~/bundles/main");
        break;
        case "operativaclientes":
            @Scripts.Render("~/bundles/opClientes");
        break;
        case "cuentacorriente":
            @Scripts.Render("~/bundles/cuentaCorriente");
        break;
        case "liquidaciones":
            @Scripts.Render("~/bundles/mensajes");
        @Scripts.Render("~/bundles/liquidaciones");
        break;
        case "empleadosliquidaciones":
            @Scripts.Render("~/bundles/mensajes");
        @Scripts.Render("~/bundles/empleadosLiquidaciones");
        break;
        case "afiliaciones":
            @*@Scripts.Render("~/bundles/afiliaciones");
            <link href="~/Content/jquery-ui/jquery-ui.min.css" rel="stylesheet" />*@
            break;
    }

    @RenderSection("scripts", required: false)
</body>

</html>
