<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
    <div class="alert alert-warning" style="padding: 8px;">
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="line-height: 28px">
                <strong>Tipo de Cliente:</strong>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <select style="width:100%" class="form-control" ng-model="filter.tipoCliente" ng-change="TipoClienteChange()">
                    <option ng-repeat="tipoCliente in data.tipoClientes" value="{{tipoCliente.ID}}">{{tipoCliente.Descripcion}}</option>
                </select>
            </div>
        </div>
    </div>
</div>

<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
    <div class="alert alert-warning" style="padding: 8px;">
        <div class="row">
            <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4" style="line-height: 28px">
                <strong>Descripcion:</strong>
            </div>
            <div class="col-xs-6 col-sm-8 col-md-8 col-lg-8">
                <input type="text" class="form-control" ng-model="filter.descripcion" />
            </div>
        </div>
    </div>
</div>
<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3" ng-show="acceso == 'Administrador'">
    <div class="alert alert-warning" style="padding: 8px;" >
        <div class="row" ng-show="acceso == 'Administrador'">
            <div class="col-md-3" style="line-height: 28px">
                <strong>Vendedores:</strong>
            </div>
            <div class="col-md-9">
                <select style="width:100%" class="form-control" ng-model="filter.UsuarioId" ng-options="vendedor.UsuarioId as vendedor.Vendedor for vendedor in data.vendedores"></select>
            </div>
        </div>
    </div>
</div>
<div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-top: 8px;padding-bottom: 8px;">
            <button class="btn btn-default btn-primary btn-block" ng-click="GetData()"><span class="glyphicon glyphicon-filter" style="margin-right:10px;"></span>Consultar</button>
        </div>
        <div ng-show="acceso == 'Vendedor'" class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-top: 8px;padding-bottom: 8px;" title="Agregar nuevo cliente potencial">
            <button class="btn btn-default btn-primary btn-block" ng-click="GetSolicitudDigitalizada(0)"><span class="glyphicon glyphicon-plus" style="margin-right:10px;" ></span>Nuevo</button>
        </div>
    </div>
</div>